def availableCpus = Runtime.runtime.availableProcessors()

executor {
    name = 'local'
    cpus = availableCpus
}

process {
    shell = ['/bin/bash', '-e']  // Remove -u flag to allow conda/micromamba activation scripts
    container = "${projectDir}/../sif_images/metafun_v0.1.sif"

    apptainer.enabled = true
    withName: make_sequence_db {
        container = "${projectDir}/../sif_images/interactive_comparative_annotation_v01.sif"
    }

    withName: run_drep_dereplication {
        container = "${projectDir}/../sif_images/interactive_comparative_annotation_v01.sif"
    }
    withName: run_prokka {
        container = "${projectDir}/../sif_images/prokka_latest.sif"
    }
    withName: sylph_sketch_all {
        container = "${projectDir}/../sif_images/interactive_wms_taxonomy_v02.sif"
    }

    withName: sylph_process_all {
        container = "${projectDir}/../sif_images/interactive_wms_taxonomy_v02.sif"
    }

    // WMS_STRAIN processes - use instrain_wms_strain container
    withName: 'prevalence_filter_phyloseq|prevalence_filter_table|concat_genomes|generate_stb|bowtie2_build|prodigal|prodigal_per_genome|concat_gene_predictions|eggnog_mapper' {
        container = "${projectDir}/../sif_images/instrain_wms_strain_v03.sif"
    }
    withName: 'bowtie2_mapping|instrain_profile|instrain_compare|aggregate_for_shiny' {
        container = "${projectDir}/../sif_images/instrain_wms_strain_v03.sif"
    }

}

env {
    APPTAINER_TMPDIR = "${launchDir}/.apptainer_tmp"
    APPTAINER_CACHEDIR = "${launchDir}/.apptainer_cache"
}

apptainer {
    enabled = true
    ociAutoPull = false
    cacheDir = "${launchDir}/.apptainer_cache"
    pullTimeout = 12000000
    apptainer.autoMounts = true

    runOptions = "--bind ${launchDir} --bind ${projectDir}/../scripts:/scratch/tools/microbiome_analysis/scripts --bind ${projectDir}/../db:/opt/database --bind ${projectDir}/../db/humann3/metaphlan:/opt/conda/envs/humann3/lib/python3.10/site-packages/metaphlan/metaphlan_databases -W /${USER}_\$(uuidgen)"

    withName: 'HUMANN3_.*|METAPHLAN_.*' {
        runOptions = "--bind ${projectDir}/../db/humann3/metaphlan:/opt/conda/envs/humann3/lib/python3.10/site-packages/metaphlan/metaphlan_databases " + runOptions
    }

}



